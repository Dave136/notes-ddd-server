{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["src/@types", "node_modules/@types"],
    "paths": {
      "@common/*": ["src/shared/common/*"],
      "@infrastructure/*": ["src/shared/infrastructure/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules"]
}
